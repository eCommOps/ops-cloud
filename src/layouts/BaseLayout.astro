---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Discover powerful AI tools and automation solutions" } = Astro.props;
const auth = Astro.locals.auth;
const user = auth?.user;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
  </head>
  <body>
    <header>
      <nav>
        <div class="container nav-container">
          <a href="/" class="logo">
            <span class="logo-icon">ðŸš€</span>
            <span class="logo-text">AI Tools Directory</span>
          </a>

          {user && (
            <div class="user-menu">
              <div class="user-info">
                <span class="user-email">{user.email}</span>
                <span class={`role-badge role-${user.role}`}>
                  {user.role === 'super_user' ? 'Super User' : user.role.charAt(0).toUpperCase() + user.role.slice(1)}
                </span>
              </div>
              {auth.hasRole(['admin', 'super_user']) && (
                <a href="/admin" class="nav-link">Admin</a>
              )}
              <button id="logout-btn" class="logout-btn">Logout</button>
            </div>
          )}

          {!user && (
            <div class="auth-links">
              <a href="/login" class="nav-link">Login</a>
              <a href="/register" class="nav-link-primary">Sign Up</a>
            </div>
          )}
        </div>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer>
      <div class="container">
        <p>&copy; 2025 AI Tools Directory. Powered by Cloudflare.</p>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  :root {
    /* Apple-inspired gradient colors */
    --gradient-blue: #0A84FF;
    --gradient-purple: #BF5AF2;
    --gradient-pink: #FF375F;
    --gradient-orange: #FF9F0A;

    --color-bg: #000000;
    --color-bg-elevated: #1C1C1E;
    --color-bg-card: rgba(28, 28, 30, 0.7);
    --color-text: #FFFFFF;
    --color-text-secondary: rgba(255, 255, 255, 0.6);
    --color-border: rgba(255, 255, 255, 0.1);

    --spacing-xs: 0.375rem;
    --spacing-sm: 0.75rem;
    --spacing-md: 1rem;
    --spacing-lg: 1.5rem;
    --spacing-xl: 2rem;
    --spacing-2xl: 3rem;

    --radius-sm: 0.5rem;
    --radius-md: 0.75rem;
    --radius-lg: 1rem;

    --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.3);
    --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.4);
    --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.5);
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'Inter', sans-serif;
    background: var(--color-bg);
    color: var(--color-text);
    line-height: 1.5;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    font-size: 0.9375rem;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--spacing-lg);
  }

  header {
    background: rgba(0, 0, 0, 0.8);
    border-bottom: 1px solid var(--color-border);
    position: sticky;
    top: 0;
    z-index: 100;
    backdrop-filter: blur(20px) saturate(180%);
  }

  nav {
    padding: var(--spacing-md) 0;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    text-decoration: none;
    color: var(--color-text);
    font-weight: 600;
    font-size: 1.0625rem;
    transition: opacity 0.2s;
  }

  .logo:hover {
    opacity: 0.7;
  }

  .logo-icon {
    font-size: 1.5rem;
  }

  .nav-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .user-menu {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
  }

  .user-info {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
  }

  .user-email {
    color: var(--color-text-secondary);
    font-size: 0.8125rem;
  }

  .role-badge {
    padding: 0.1875rem 0.625rem;
    border-radius: 0.375rem;
    font-size: 0.6875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.025em;
  }

  .role-viewer {
    background: rgba(142, 142, 147, 0.15);
    color: rgba(255, 255, 255, 0.7);
  }

  .role-admin {
    background: rgba(10, 132, 255, 0.15);
    color: var(--gradient-blue);
  }

  .role-super_user {
    background: rgba(191, 90, 242, 0.15);
    color: var(--gradient-purple);
  }

  .nav-link {
    color: var(--color-text-secondary);
    text-decoration: none;
    font-weight: 500;
    font-size: 0.875rem;
    transition: color 0.2s;
  }

  .nav-link:hover {
    color: var(--color-text);
  }

  .nav-link-primary {
    color: white;
    background: var(--gradient-blue);
    padding: 0.5rem 0.875rem;
    border-radius: var(--radius-md);
    text-decoration: none;
    font-weight: 600;
    font-size: 0.8125rem;
    transition: all 0.2s;
  }

  .nav-link-primary:hover {
    background: var(--gradient-purple);
    transform: translateY(-1px);
  }

  .auth-links {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
  }

  .logout-btn {
    padding: 0.4375rem 0.875rem;
    background: transparent;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    color: var(--color-text);
    font-size: 0.8125rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s;
  }

  .logout-btn:hover {
    background: var(--color-bg-card);
    border-color: var(--gradient-blue);
    color: var(--gradient-blue);
  }

  main {
    flex: 1;
    padding: var(--spacing-xl) 0;
  }

  footer {
    background: rgba(0, 0, 0, 0.5);
    border-top: 1px solid var(--color-border);
    padding: var(--spacing-xl) 0;
    text-align: center;
    color: var(--color-text-secondary);
    font-size: 0.8125rem;
  }

  h1, h2, h3 {
    line-height: 1.15;
    font-weight: 700;
    letter-spacing: -0.025em;
  }

  h1 {
    font-size: 2.25rem;
    margin-bottom: var(--spacing-md);
  }

  h2 {
    font-size: 1.75rem;
    margin-bottom: var(--spacing-md);
  }

  h3 {
    font-size: 1.25rem;
    margin-bottom: var(--spacing-sm);
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 1.875rem;
    }

    h2 {
      font-size: 1.5rem;
    }

    .nav-container {
      flex-direction: column;
      gap: var(--spacing-md);
    }

    .user-menu {
      flex-wrap: wrap;
      justify-content: center;
    }
  }
</style>

<script>
  const logoutBtn = document.getElementById('logout-btn');

  if (logoutBtn) {
    logoutBtn.addEventListener('click', async () => {
      try {
        const response = await fetch('/api/auth/logout', {
          method: 'POST',
        });

        if (response.ok) {
          window.location.href = '/login';
        }
      } catch (error) {
        console.error('Logout error:', error);
      }
    });
  }
</script>
