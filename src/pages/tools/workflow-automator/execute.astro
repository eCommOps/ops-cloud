---
import ToolExecuteLayout from '../../../layouts/ToolExecuteLayout.astro';

const auth = Astro.locals.auth;

// Require admin or super_user
if (!auth?.hasRole(['admin', 'super_user'])) {
  return Astro.redirect('/');
}
---

<ToolExecuteLayout title="Execute: Workflow Automator" toolName="Workflow Automator" toolIcon="⚡">
  <div class="tool-execute-card">
    <div class="card-section">
      <h2>Create Automation Workflow</h2>
      <p class="section-description">Design and test automation workflows</p>

      <form id="execute-form" class="execute-form">
        <div class="form-group">
          <label for="workflow-name">Workflow Name</label>
          <input
            type="text"
            id="workflow-name"
            name="workflow-name"
            placeholder="My Automation Workflow"
            required
          />
        </div>

        <div class="form-group">
          <label for="trigger">Trigger Event</label>
          <select id="trigger" name="trigger" required>
            <option value="">Select a trigger...</option>
            <option value="email">New Email Received</option>
            <option value="webhook">Webhook Called</option>
            <option value="schedule">Scheduled Time</option>
            <option value="file">File Upload</option>
          </select>
        </div>

        <div class="form-group">
          <label for="actions">Actions (one per line)</label>
          <textarea
            id="actions"
            name="actions"
            rows="6"
            placeholder="Send notification&#10;Update database&#10;Create task"
            required
          ></textarea>
        </div>

        <button type="submit" class="btn-execute" id="execute-btn">
          <span class="btn-text">⚡ Test Workflow</span>
          <span class="btn-loader" style="display: none;">
            <span class="spinner"></span> Processing...
          </span>
        </button>
      </form>
    </div>

    <div id="result-section" class="card-section result-section" style="display: none;">
      <h2>Workflow Execution Results</h2>

      <div class="workflow-steps" id="workflow-steps"></div>

      <div class="workflow-summary" id="workflow-summary"></div>

      <button id="reset-btn" class="btn-secondary">Create Another Workflow</button>
    </div>

    <div id="error-section" class="error-section" style="display: none;">
      <div class="error-content" id="error-content"></div>
    </div>
  </div>
</ToolExecuteLayout>

<style>
  .tool-execute-card {
    background: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: var(--radius);
    overflow: hidden;
  }

  .card-section {
    padding: var(--spacing-xl);
    border-bottom: 1px solid var(--color-border);
  }

  .section-description {
    color: var(--color-text-secondary);
    margin-bottom: var(--spacing-lg);
  }

  .execute-form {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
  }

  .form-group label {
    font-weight: 600;
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    padding: var(--spacing-md);
    background: var(--color-bg-secondary);
    border: 2px solid var(--color-border);
    border-radius: var(--radius);
    color: var(--color-text);
    font-size: 1rem;
    transition: border-color 0.3s;
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--color-primary);
  }

  .form-group textarea {
    font-family: inherit;
    resize: vertical;
  }

  .btn-execute {
    padding: var(--spacing-md) var(--spacing-lg);
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    border: none;
    border-radius: var(--radius);
    color: white;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s;
    box-shadow: 0 4px 12px rgba(99, 102, 241, 0.3);
  }

  .btn-execute:hover:not(:disabled) {
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(99, 102, 241, 0.4);
  }

  .btn-execute:disabled {
    opacity: 0.6;
    cursor: not-allowed;
  }

  .spinner {
    display: inline-block;
    width: 14px;
    height: 14px;
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-top-color: white;
    border-radius: 50%;
    animation: spin 0.6s linear infinite;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  .workflow-steps {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-lg);
  }

  .workflow-summary {
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius);
    padding: var(--spacing-lg);
    margin-bottom: var(--spacing-lg);
  }

  .btn-secondary {
    padding: var(--spacing-md) var(--spacing-lg);
    background: transparent;
    border: 1px solid var(--color-border);
    border-radius: var(--radius);
    color: var(--color-text);
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s;
  }

  .btn-secondary:hover {
    background: var(--color-bg-secondary);
    border-color: var(--color-primary);
  }

  .error-section {
    padding: var(--spacing-lg);
    background: rgba(239, 68, 68, 0.1);
    border: 1px solid rgba(239, 68, 68, 0.3);
    border-radius: var(--radius);
    margin: var(--spacing-lg);
  }

  .error-content {
    color: #fca5a5;
  }
</style>

<script>
  const form = document.getElementById('execute-form') as HTMLFormElement;
  const executeBtn = document.getElementById('execute-btn') as HTMLButtonElement;
  const btnText = executeBtn.querySelector('.btn-text') as HTMLElement;
  const btnLoader = executeBtn.querySelector('.btn-loader') as HTMLElement;
  const resultSection = document.getElementById('result-section') as HTMLElement;
  const errorSection = document.getElementById('error-section') as HTMLElement;
  const errorContent = document.getElementById('error-content') as HTMLElement;
  const resetBtn = document.getElementById('reset-btn') as HTMLButtonElement;

  form.addEventListener('submit', async (e) => {
    e.preventDefault();

    const workflowName = (document.getElementById('workflow-name') as HTMLInputElement).value;
    const trigger = (document.getElementById('trigger') as HTMLSelectElement).value;
    const actions = (document.getElementById('actions') as HTMLTextAreaElement).value;

    executeBtn.disabled = true;
    btnText.style.display = 'none';
    btnLoader.style.display = 'inline-flex';
    errorSection.style.display = 'none';
    resultSection.style.display = 'none';

    try {
      const response = await fetch('/api/tools/workflow-automator/execute', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ workflowName, trigger, actions }),
      });

      const data = await response.json();

      if (response.ok) {
        displayResults(data.result);
        resultSection.style.display = 'block';
        form.style.display = 'none';
      } else {
        errorContent.textContent = data.error || 'Execution failed';
        errorSection.style.display = 'block';
      }
    } catch (error) {
      errorContent.textContent = 'Network error. Please try again.';
      errorSection.style.display = 'block';
    } finally {
      executeBtn.disabled = false;
      btnText.style.display = 'inline';
      btnLoader.style.display = 'none';
    }
  });

  function displayResults(result: any) {
    const stepsContainer = document.getElementById('workflow-steps')!;
    const summaryContainer = document.getElementById('workflow-summary')!;

    // Display steps
    stepsContainer.innerHTML = result.steps
      .map(
        (step: any, i: number) => `
        <div style="display: flex; align-items: center; gap: 1rem; padding: 1rem; background: var(--color-bg-secondary); border: 1px solid var(--color-border); border-radius: var(--radius);">
          <div style="font-size: 2rem;">${step.icon}</div>
          <div style="flex: 1;">
            <div style="font-weight: 600; margin-bottom: 0.25rem;">Step ${i + 1}: ${step.name}</div>
            <div style="color: var(--color-text-secondary); font-size: 0.875rem;">${step.status}</div>
          </div>
          <div style="color: #10b981; font-weight: 600;">✓</div>
        </div>
      `
      )
      .join('');

    // Display summary
    summaryContainer.innerHTML = `
      <h3 style="margin-bottom: 1rem;">Execution Summary</h3>
      <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem;">
        <div>
          <div style="color: var(--color-text-secondary); font-size: 0.875rem;">Total Steps</div>
          <div style="font-size: 1.5rem; font-weight: 700; color: var(--color-primary);">${result.summary.totalSteps}</div>
        </div>
        <div>
          <div style="color: var(--color-text-secondary); font-size: 0.875rem;">Successful</div>
          <div style="font-size: 1.5rem; font-weight: 700; color: #10b981;">${result.summary.successful}</div>
        </div>
        <div>
          <div style="color: var(--color-text-secondary); font-size: 0.875rem;">Duration</div>
          <div style="font-size: 1.5rem; font-weight: 700; color: var(--color-text);">${result.summary.duration}</div>
        </div>
      </div>
    `;
  }

  resetBtn.addEventListener('click', () => {
    form.style.display = 'flex';
    resultSection.style.display = 'none';
    errorSection.style.display = 'none';
    form.reset();
  });
</script>
